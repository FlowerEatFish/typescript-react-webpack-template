{
  "compilerOptions": {
    /* Basic Options */
    "target": "es5",
    "lib": ["dom", "esnext"],
    "jsx": "react",

    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    /* Additional Checks */
    "noImplicitReturns": true,

    /* Module Resolution Options */
    "esModuleInterop": true
  },
  "include": ["./src/"]
}
